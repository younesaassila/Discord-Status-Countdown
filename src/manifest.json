{
  "name": "Discord Status Countdown",
  "version": "1.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.ts"]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Discord Status Countdown",
    "default_popup": "popup/menu.html"
  },
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png",
    "144": "icons/icon@3x.png",
    "192": "icons/icon@4x.png"
  },
  "permissions": ["webRequest", "*://*.discord.com/*"]
}
